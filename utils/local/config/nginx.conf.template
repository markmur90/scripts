events {}
http {
    server {
        listen 8000 ssl;
        ssl_certificate     /home/markmur88/local/config/certs/server.crt;
        ssl_certificate_key /home/markmur88/local/config/certs/server.key;

        location / {
            proxy_pass http://127.0.0.1:{{DJANGO_PORT}};
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }
    }
}
